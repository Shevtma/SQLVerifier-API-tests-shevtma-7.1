							"let moment = require(\"moment\");",
							"let jsonBody = JSON.parse(responseBody);",
							"let ResponceDateTime = moment(pm.response.headers.get(\"Date\"));",
							"let taskId_arr = jsonBody.map((task) => {return task.id});",
							"",
							"assert.equal(pm.response.code, 200, \"Status code is 200\");",
							"assert.equal(pm.response.status, \"OK\", \"Status code name is \\\"OK\\\" \");",
							"assert.notEqual(jsonBody.length, 0, \"We have a massive of tasks in response\")",
							"assert.equal(ResponceDateTime.format(\"DD.MM.YYYY hh:mm Z\"), pm.environment.get('CurrDateTime'), \"Check for the response datetime to be \" + pm.environment.get('CurrDateTime'));",
							"assert.isTrue(taskId_arr.includes(pm.environment.get('task_id')), \"We have a block in response with task_id = \"+ pm.environment.get('task_id'));",
							"//assert.equal(pm.response.headers.get(\"Accept\"), \"*/*\", \"Accept header matches \\\"*/*\\\"\");",
